@model CourseManagement.BLL.ViewModels.SessionVM

@{
    ViewData["Title"] = "Edit Session";
}

<h2>Edit Session</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    @await Html.PartialAsync("_SessionForm", Model)

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">Cancel</a>
</form>
